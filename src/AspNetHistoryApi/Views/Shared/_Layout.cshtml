@helper MenuItem(string jsId, string linkText, string actionName, string controllerName)
{
    @Ajax.ActionLink(linkText, actionName, controllerName, null, new AjaxOptions
        {
            HttpMethod = WebRequestMethods.Http.Get,
            AllowCache = false,
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "contentContainer",
            OnSuccess = "window.tabSwitcher.navigationSucceeded(this)",
            OnFailure = "window.tabSwitcher.navigationFailed(this)",
            OnComplete = "window.tabSwitcher.navigationCompleted(this)"
        }, new { id = jsId, @class = "js-tab" })
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(string.Format("Rendered at {0}", DateTime.Now.ToString("HH:mm:ss:fff")), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@MenuItem("homeLink", "Home", "Index", "Home")</li>
                    <li>@MenuItem("aboutLink", "About", "About", "Home")</li>
                    <li>@MenuItem("contactLink", "Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="contentContainer">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/vendor")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
